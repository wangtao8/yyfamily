/* pages/issue/index.wxss */
page{
  padding: 30rpx 20rpx 0rpx 20rpx;
  box-sizing: border-box;
  height: 100%;
  font-size: 32rpx;
}
.issue-title::after, .issue-content::after{
  content: '';
  display: block;
  height: 2rpx;
  width: calc(100% + 40rpx);
  background-color: #c8c8c8;
  margin: 10rpx 0rpx 10rpx -20rpx;
}
.issue-title>input{
  display: inline-block;
  width: calc(100% - 86rpx);
  float: right;
}
.issue-content{
  position: relative;
  color: #c8c8c8;
}
.issue-content>text:nth-child(1){
  color: #000;
}
.issue-content>textarea{
  display:inline-block;
  width:calc(100% - 86rpx);
  float:right;
  /* height: 350rpx; */
}

.issue-add{
  margin-top: 20rpx;
}
.issue-add>view{
  padding: 0rpx;
  width: 162rpx;
  height: 162rpx;
  background: #3cb7fb;
  float: left;
  margin-right: 20rpx;
  color: #c8c8c8;
  font-size: 88rpx;
   text-align: center; 
  line-height: 150rpx;
}
.issue-add>view>image{
  width: 100%;
  height: 100%;
}
.lave{
  position: absolute;
  right: 4rpx;
  bottom: 0rpx;
}
.issue-add>view:nth-child(1){
  width: 158rpx;
  height: 158rpx;
  background-color: #fff;
  border: 2rpx solid #c8c8c8;
  position: relative;
}
.issue-add>view:last-child{
  margin-right: 0rpx;
}
.issue{
  height: 92rpx;
  width: calc(100% + 20rpx);
  text-align: center;
  line-height: 92rpx;
  color: #fff;
  font-size: 32rpx;
  background-color: #3cb7fb;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
}
.clear::after{
  content: '';
  display: block;
  clear: both;
}