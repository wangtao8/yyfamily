/**index.wxss**/
page,
.page,
.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}
.weui-tab__content{
    text-align: center;
}
.weui-navbar{
  background-color: #fff;
}
.searchbar-result{
    margin-top: 0;
    font-size: 14px;
}
.searchbar-result:before{
    display: none;
}
.weui-cell{
    padding: 12px 15px 12px 35px;
}
.weui-search-bar__box{
  padding-left: 10px;
}
.weui-search-bar{
  background-color: #fff;
}
.weui-search-bar__form, .weui-search-bar__label{
  border-radius: 14px;
}
.weui-search-bar{
  border-bottom: inherit;
}
.slide-image{
  border-radius: 8px;
  height: 100%;
  width: 95%;
}
swiper{
  margin-bottom: 10px;
  height: 138px;
}
.blank20{
  height: 10px;
  background-color: #ccc;
}
.weui-tab__content{
  overflow-x: hidden;
}
.user-image{
  width: 95%;
  height: 158px;
  border-radius: 8px;
  background-image: url('http://img06.tooopen.com/images/20160818/tooopen_sy_175866434296.jpg');
  background-repeat: round;
  margin: 10px auto;
  position: relative;
}
.user-heart{
  width: 18px;
  height: 16px;
  position: absolute;
  right: 20px;
  top: 10px;
}
.user-watch>image{
  width: 24px;
  height: 24px;
  position: absolute;
  left: 20px;
  bottom: 10px;
}
.user-watch>span{
  font-size: 14px;
  width: 24px;
  height: 24px;
  position: absolute;
  left: 48px;
  bottom: 9px;
}
.user-share{
  margin: 10px 0px;
}
.user-share::after{
  content: '';
  display: block;
  width: 100%;
  height: 10px;
  background: #ccc;
  margin-top: 10px;
}
.user-say{
  font-size: 16px;
  color: #3b3b3b;
  width: 100%;
  text-align: left;
  margin-left: 10px;
}
.use-label{
  font-size: 16px;
  float: left;
  margin-left: 10px;
  color: #fe5431;
}
.user-interactive{
  /* background: red; */
   width: 130px; 
  float: right;
  margin-right: 10px;
  font-size: 16px;
  color: #949494;
}
.user-comment>image{
  width:20px;
  height:20px;
  float:left;
  margin-top:4px;
}
.user-comment>span{
  width: 24px;
  height: 24px;
  float: left;
  margin-left: 4px;
}
.user-laud>image{
  width:16px;
  height:16px;
  float:left;
  margin-top:5px;
}
.user-laud>span{
  width: 24px;
  height: 24px;
  float: left;
  margin-left: 4px;
}
.botoom-nav{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  height:44px;
  line-height:44px;
  color: #424242;
  width:100%;
  font-size:16px;
  position:fixed;
  bottom:0;
  left:0;
}
.weui-tab__panel{
  height: calc(100% - 44px)
}