/* pages/reply/index.wxss */
page{
  padding: 0rpx 30rpx 0rpx 24rpx;
  box-sizing: border-box;
  height: 100%;
}
.comment-top{
  width: 100%;
  height: 76rpx;
  margin-top: 20rpx;
  font-size: 24rpx;
}
.comment-top>view{
  display: inline-block;
  width: calc(100% - 116rpx);
  height: 88rpx;
  margin-left: 24rpx;
  position: relative;
  top: -16rpx;
}
.other-user{
  padding-bottom: 32rpx;
  background-color: #f7f7f7;
}
.user-time{
  color: #b7b7b7;
}
.reply>image{
  width: 36rpx;
  height: 32rpx;
  float: right;
  position: relative;
  top: -36rpx;
}
.avatar-main{
  width: 90rpx;
  height: 90rpx;
  border-radius: 45rpx;
}
.get-info{
  /* float: right; */
  display: inline-block;
  height: 32rpx;
  position: relative;
  top: -20rpx;
}
.user-info{
  display: inline-block;
  width: calc(100% - 140rpx);
}
.get-laud{
  position: relative;
  width: 140rpx;
  /* top: -25px; */
}
.get-laud2{
  position: relative;
  width: 80rpx;
  left:50rpx;
}
.get-laud>image, .get-laud2>image{
  width: 32rpx;
  height: 32rpx;
}
.get-laud>span,.get-laud2>span{
  margin-left: 16rpx;
  color: #b7b7b7;
}
.reply-comment{
  box-sizing: border-box;
  padding: 22rpx 0rpx 0rpx 10rpx;
}
.commnent-bot{
  font-size: 28rpx;
  padding-left: 116rpx;
  margin-bottom: 32rpx;
  margin-top: 20rpx;
}
.commnent-bot2{
  font-size:28rpx;
  margin-bottom:32rpx;
  border-bottom:2rpx solid #ccc;
  width:calc(100% - 120rpx);
  margin-left: 100rpx;
  padding-bottom: 12rpx;
}
.avatar-img{
  width: 74rpx;
  height: 74rpx;
  border-radius: 37rpx;
}
.avatar-user{
  display: inline-block;
  width: calc(100% - 110rpx);
  font-size: 24rpx;
  margin-left: 30rpx;
}
.write-comment{
  height: 90rpx;
  width: calc(100% + 40rpx);
  position: fixed;
  left: 0rpx;
  bottom: 12rpx;
  background-color: #fff;
  border-top:2rpx solid #ccc;
  /* box-sizing: border-box; */
  padding-bottom: 10rpx;
}
.top-info{
  height: calc(100% - 90rpx);
  margin-bottom: 20rpx;
}
.write-comment>input{
  /* width: 82%; */
  height: 48rpx;
  border-radius: 24rpx;
  border: 2rpx solid #ccc;
  /* margin: 22rpx auto 0rpx; */
  padding-left: 20rpx;
  font-size: 24rpx;
}
.submitBtn{
  font-size: 32rpx;
  color: #098d3b;
  position: absolute;
  right: 60rpx;
  bottom: 20rpx;
}